<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.webshrub.citizencomplaint.androidapp"
          android:installLocation="auto"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".CitizenComplaintApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light">
        <activity
            android:name=".CitizenComplaintHomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".CitizenComplaintTemplateListActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.Light"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CitizenComplaintTypeComplaintActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.Light"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".CitizenComplaintPhotoCaptureActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.Light"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CitizenComplaintPreferenceActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.Light"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CitizenComplaintHelpActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.Light"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CitizenComplaintAboutActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.Light"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CitizenComplaintProfileActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.Light"
            android:screenOrientation="portrait"/>

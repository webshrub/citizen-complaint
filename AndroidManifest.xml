<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bangalore.civic.complaint.box"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light" >
        <activity
            android:name="com.bangalore.civic.complaint.box.MainActivity"
            android:label="" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bangalore.civic.complaint.box.ActionActivity"
            android:label="@string/title_activity_action"
            android:theme="@style/Theme.Sherlock.Light" >
        </activity>
        <activity
            android:name="com.bangalore.civic.complaint.box.TypeComplaintActivity"
            android:label="@string/title_activity_type_complaint"
            android:theme="@style/Theme.Sherlock.Light" >
        </activity>
        <activity
            android:name="com.bangalore.civic.complaint.box.PhotoCaptureActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_photo_capture"
            android:theme="@style/Theme.Sherlock.Light" >
        </activity>
        <activity
            android:name="com.bangalore.civic.complaint.box.GetLocationActivity"
            android:label="@string/title_activity_get_location"
            android:theme="@style/Theme.Sherlock.Light" >
        </activity>
    </application>

</manifest>
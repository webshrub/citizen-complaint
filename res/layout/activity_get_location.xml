<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" tools:context=".GetLocationActivity">
    <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true" android:text="@string/hello_world"/>
    <Button android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" android:layout_below="@+id/textView1" android:text="Get Location and Continue"/>
    <Button android:id="@+id/button2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" android:layout_below="@+id/button1" android:layout_marginTop="16dp"
            android:text="Continue without location"/>
</RelativeLayout>